<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/main_bg">

    <LinearLayout
            android:id="@+id/bottomBar"
            android:orientation="horizontal"
            android:layout_height="56dp"
            android:layout_width="fill_parent"
            android:background="@drawable/bottom_bg"
            android:layout_alignParentBottom="true"
            android:baselineAligned="false">

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBottomShowTime"
                    android:background="@drawable/bottom_toggle_icon1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOn=""
                    android:textOff=""/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBottomWardrobe"
                    android:background="@drawable/bottom_toggle_icon2"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOff=""
                    android:textOn=""
                    android:checked="true"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBottomCollocation"
                    android:background="@drawable/bottom_toggle_icon4"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOn=""
                    android:textOff=""/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBottomPersonalCentre"
                    android:background="@drawable/bottom_toggle_icon5"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOn=""
                    android:textOff=""/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnBottomOther"
                    android:background="@drawable/bottom_toggle_icon5"
                    android:gravity="center_vertical|center_horizontal"
                    android:textOn=""
                    android:textOff=""/>
        </LinearLayout>
    </LinearLayout>


    <FrameLayout
            android:id="@+id/mainFrame"
            android:layout_height="fill_parent"
            android:layout_width="fill_parent"
            android:layout_above="@id/bottomBar">

        <LinearLayout android:layout_height="fill_parent" android:layout_width="fill_parent"
                      android:orientation="vertical">
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp" android:background="@drawable/main_list_bg">
                <ImageView
                        android:layout_width="90dp"
                        android:layout_height="120dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="28dp"
                        android:layout_marginTop="45dp"
                        android:src="@drawable/member_pho_box"/>
                <ImageView
                        android:id="@+id/portrait"
                        android:layout_width="86dp"
                        android:layout_height="116dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_marginLeft="30dp"
                        android:layout_marginTop="47dp"
                        android:src="@drawable/member_pho"/>
                <TextView android:id="@+id/nick"
                          android:layout_height="wrap_content"
                          android:layout_width="wrap_content"
                          android:layout_alignParentLeft="true"
                          android:layout_alignParentTop="true"
                          android:layout_marginTop="58dp"
                          android:layout_marginLeft="140dp" android:text="nick"
                          android:textColor="@color/black" android:textSize="14sp"/>
                <Button android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/function_btn_1"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="140dp" android:text="@string/fans"/>
                <Button android:layout_height="25dp"
                        android:layout_width="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentLeft="true"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/function_btn_2"
                        android:gravity="center_vertical|center_horizontal"
                        android:layout_marginLeft="250dp" android:text="@string/friend"/>
            </RelativeLayout>
            <LinearLayout android:layout_width="fill_parent"
                          android:layout_height="fill_parent" android:background="@drawable/module_box"
                          android:paddingLeft="10dp" android:paddingRight="10dp">
                <LinearLayout android:layout_width="fill_parent" android:layout_height="100dp"
                              android:orientation="horizontal">
                    <ImageView
                            android:layout_width="119dp"
                            android:layout_height="149dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/member_pho_box"/>
                    <ImageView
                            android:layout_width="119dp"
                            android:layout_height="149dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/member_pho_box"/>
                    <ImageView
                            android:layout_width="119dp"
                            android:layout_height="149dp"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:src="@drawable/member_pho_box"/>
                </LinearLayout>
                <LinearLayout android:layout_width="fill_parent" android:layout_height="fill_parent">
                    <ListView
                            android:id="@+id/messages"
                            android:layout_height="wrap_content"
                            android:layout_width="fill_parent"
                            android:background="@color/transparent"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <include
                android:id="@+id/topBar"
                layout="@layout/catalog_top"
                android:layout_width="fill_parent"
                android:layout_height="54dp"
                android:layout_alignParentTop="true"/>
    </FrameLayout>


</RelativeLayout>