<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <RelativeLayout
        android:id="@+id/pnlTopbar"
        android:orientation="horizontal"
        android:layout_height="54dp"
        android:layout_width="fill_parent"
        android:layout_alignParentTop="true"
        android:background="@drawable/top_bg"
        android:baselineAligned="false">

        <LinearLayout
            android:id="@+id/pnlBack"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center_horizontal|center_vertical">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnTopReturn"
                android:background="@drawable/btn_return"
                android:gravity="center_vertical|center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_toRightOf="@id/pnlBack"
            android:gravity="center_horizontal|center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/share"
                style="@style/Title" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_below="@id/pnlTopbar">

        <TableLayout
            android:id="@+id/tblShare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:stretchColumns="*"
            android:layout_alignParentTop="true">

            <TableRow
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnShare1"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:background="@drawable/icon1"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />

                <ImageButton
                    android:id="@+id/btnShare2"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:background="@drawable/icon2"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />

                <ImageButton
                    android:id="@+id/btnShare3"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:background="@drawable/icon3"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />

                <ImageButton
                    android:id="@+id/btnShare4"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:background="@drawable/icon4"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />
            </TableRow>

            <TableRow
                android:id="@+id/row1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/btnShare1"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:background="@drawable/icon5"
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/btnShare2"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/btnShare2"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />

                <TextView
                    android:id="@+id/btnShare2"
                    android:layout_height="60dip"
                    android:layout_width="60dip"
                    android:layout_weight="1"
                    android:contentDescription=""
                    android:layout_margin="10dp"
                    android:gravity="center_horizontal|center_vertical" />
            </TableRow>
        </TableLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tblShare"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal|center_vertical">

            <ImageButton
                android:id="@+id/btnCancel"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:contentDescription=""
                android:background="@drawable/btn_cancel"
                android:layout_margin="10dp"
                android:gravity="center_horizontal|center_vertical" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>