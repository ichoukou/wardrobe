<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_bg">

    <LinearLayout
        android:id="@+id/bottomBar"
        android:orientation="horizontal"
        android:layout_height="56dp"
        android:layout_width="fill_parent"
        android:background="@drawable/bottom_bg"
        android:layout_alignParentBottom="true"
        android:baselineAligned="false">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBottomShowTime"
                android:background="@drawable/bottom_toggle_icon1"
                android:gravity="center_vertical|center_horizontal"
                android:textOn=""
                android:textOff="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBottomWardrobe"
                android:background="@drawable/bottom_toggle_icon2"
                android:gravity="center_vertical|center_horizontal"
                android:textOff=""
                android:textOn=""
                android:checked="true" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBottomCollocation"
                android:background="@drawable/bottom_toggle_icon4"
                android:gravity="center_vertical|center_horizontal"
                android:textOn=""
                android:textOff="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBottomPersonalCentre"
                android:background="@drawable/bottom_toggle_icon5"
                android:gravity="center_vertical|center_horizontal"
                android:textOn=""
                android:textOff="" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal|center_vertical">

            <jbolt.android.widget.ToggleButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btnBottomOther"
                android:background="@drawable/bottom_toggle_icon5"
                android:gravity="center_vertical|center_horizontal"
                android:textOn=""
                android:textOff="" />
        </LinearLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/mainFrame"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:layout_above="@id/bottomBar">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:paddingTop="54dp"
            android:orientation="vertical">

            <ListView
                android:id="@+id/lstCollocation"
                android:layout_height="fill_parent"
                android:layout_width="fill_parent" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="89dp"
            android:layout_height="fill_parent"
            android:background="@drawable/curtain_left"
            android:layout_alignParentLeft="true" />


        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/topBar"
            android:orientation="horizontal"
            android:layout_height="54dp"
            android:layout_width="fill_parent"
            android:layout_alignParentTop="true"
            android:background="@drawable/top_bg"
            android:baselineAligned="false">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_alignParentLeft="true"
                android:gravity="center_horizontal|center_vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnTopReturn"
                    android:background="@drawable/btn_return"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:orientation="vertical"
                android:layout_alignParentRight="true"
                android:gravity="center_horizontal|center_vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/btnTopAdd"
                    android:background="@drawable/btn_add"
                    android:gravity="center_vertical|center_horizontal" />
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>


</RelativeLayout>