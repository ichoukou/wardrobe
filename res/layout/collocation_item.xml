<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="168px">

    <LinearLayout
        android:id="@+id/pnlTime"
        android:layout_width="wrap_content"
        android:layout_height="168px"
        android:paddingLeft="25dp"
        android:orientation="horizontal"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal|center_vertical">

        <TextView
            android:id="@+id/lblTime"
            android:layout_width="50dp"
            android:layout_height="fill_parent"
            android:textColor="@color/text1"
            android:textSize="14sp"
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pnlTimePoint"
        android:layout_width="wrap_content"
        android:layout_height="168px"
        android:layout_marginLeft="5dp"
        android:orientation="horizontal"
        android:layout_toRightOf="@id/pnlTime"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:id="@+id/imgTimepoint"
            android:src="@drawable/timepoint"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:contentDescription=""
            android:gravity="center_horizontal|center_vertical" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="168px"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@id/pnlTimePoint"
        android:layout_marginLeft="5dp"
        android:background="@drawable/list_bg"
        android:gravity="center_horizontal|center_vertical">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/pic_box"
            android:contentDescription="" />

    </LinearLayout>
</RelativeLayout>