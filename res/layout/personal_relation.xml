<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:background="@drawable/main_list_bg">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="120dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="45dp"
        android:src="@drawable/member_pho_box" />

    <ImageView
        android:id="@+id/imgPortrait"
        android:layout_width="86dp"
        android:layout_height="116dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="47dp"
        android:src="@drawable/member_pho" />

    <TextView
        android:id="@+id/lblNick"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="58dp"
        android:layout_marginLeft="140dp"
        android:text="nick"
        android:textColor="@color/black"
        android:textSize="14sp" />

    <Button
        android:layout_height="25dp"
        android:layout_width="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/function_btn_1"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="140dp"
        android:text="@string/fans" />

    <Button
        android:layout_height="25dp"
        android:layout_width="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="20dp"
        android:background="@drawable/function_btn_2"
        android:gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="250dp"
        android:text="@string/friend" />
</RelativeLayout>